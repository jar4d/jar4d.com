---
import { Icon } from "astro-icon";
import ContentSection from "~/components/content-section.astro";

const images = [
  {
    src: "https://placehold.co/600x400/222222/FFFFFF/png",
    aspect: "aspect-[3/2]",
    width: "w-64"
  },
  {
    src: "https://placehold.co/400x600/222222/FFFFFF/png",
    aspect: "aspect-[2/3]",
    width: "w-44"
  },
  {
    src: "https://placehold.co/800x400/222222/FFFFFF/png",
    aspect: "aspect-[2/1]",
    width: "w-80"
  },
  {
    src: "https://placehold.co/500x500/222222/FFFFFF/png",
    aspect: "aspect-square",
    width: "w-56"
  }
];
---

<ContentSection title="About Me" id="intro">
  <Fragment slot="lead">
    <p class="font-heavy">
      I help companies build and scale their products through effective marketing and growth strategies.
    </p>
  </Fragment>


  <div class="relative h-[800px] overflow-hidden bg-transparent py-1 -mt-[400px]">
    {/* Top row */}
    <div class="relative h-[45%] mb-[5px]">
      <div class="animate-slide-right flex gap-[5px] absolute left-0">
        {images.map((image) => (
          <div class={`relative ${image.width} shrink-0`}>
            <img
              src={image.src}
              alt="Placeholder"
              class={`${image.aspect} h-full w-full object-cover`}
            />
          </div>
        ))}
        {/* Duplicate for seamless loop */}
        {images.map((image) => (
          <div class={`relative ${image.width} shrink-0`}>
            <img
              src={image.src}
              alt="Placeholder"
              class={`${image.aspect} h-full w-full object-cover`}
            />
          </div>
        ))}
      </div>
    </div>

    {/* Bottom row */}
    <div class="relative h-[45%]">
      <div class="animate-slide-left flex gap-[5px] absolute right-0">
        {images.reverse().map((image) => (
          <div class={`relative ${image.width} shrink-0`}>
            <img
              src={image.src}
              alt="Placeholder"
              class={`${image.aspect} h-full w-full object-cover`}
            />
          </div>
        ))}
        {/* Duplicate for seamless loop */}
        {images.map((image) => (
          <div class={`relative ${image.width} shrink-0`}>
            <img
              src={image.src}
              alt="Placeholder"
              class={`${image.aspect} h-full w-full object-cover`}
            />
          </div>
        ))}
      </div>
    </div>
  </div>
</ContentSection>

<style>
  @keyframes slide-right {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  @keyframes slide-left {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(50%);
    }
  }

  .animate-slide-right {
    animation: slide-right 40s linear infinite;
  }

  .animate-slide-left {
    animation: slide-left 40s linear infinite;
  }

  .animate-slide-right:hover,
  .animate-slide-left:hover {
    animation-play-state: paused;
  }
</style>
