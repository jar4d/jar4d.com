---
import { Icon } from "astro-icon";
import ContentSection from "~/components/content-section.astro";
import type { FeatureItem } from "~/types";

const experiences: Array<FeatureItem> = [
  {
    title: "Day 8",
    description:
      "CMO at Day 8, a DTC travel group providing incredible adventures on and off the water.",
    icon: "mdi:sail-boat",
  },
  {
    title: "Forward Partners",
    description:
      "Led brand, marketing and IR for Forward Partners, an early-stage VC through their successful IPO.",
    icon: "mdi:trending-up",
  },
  {
    title: "Plentific",
    description:
      "Led marketing and growth, helping to pivot, scale across Europe and raise over $150m in funding.",
    icon: "mdi:home-city",
  },
  {
    title: "Think Plant Thrive",
    description:
      "Founded and successfully sold a startup focused on sustainable solutions.",
    icon: "mdi:sprout",
  },
  {
    title: "News UK",
    description:
      "Built and launched The Times London Weekly, an international digital edition.",
    icon: "mdi:newspaper",
  },
  {
    title: "Innovation Projects",
    description:
      "Developed various innovative projects including a robot dog for the elderly and an omni-directional wheelchair.",
    icon: "mdi:robot",
  },
];
---

<ContentSection title="Experience" id="experience">
  <Fragment slot="lead">
    From <span class="text-primary">startups</span> to <span class="text-primary">scale-ups</span>,
    building and growing <span class="text-primary">impactful products</span>.
  </Fragment>
  <ul class="grid max-w-6xl grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
    {
      experiences.map(({ title, description, icon }) => (
        <li class="flex flex-col items-start gap-4 border border-default bg-offset p-6 hover:bg-default transition-colors">
          <div class="h-12 w-12 rounded-full border-2 border-current p-2">
            <Icon name={icon} />
          </div>
          <p class="font-bold text-xl">{title}</p>
          <p class="text-offset text-sm">{description}</p>
        </li>
      ))
    }
  </ul>
</ContentSection>
